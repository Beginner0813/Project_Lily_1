<Window x:Class="Project_Lily.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Lily.View"
        mc:Ignorable="d"
                     Background="#06223c"
        Title="MainWindow" Height="800" Width="500">

    <!-- 테스트용-->
    <Grid>
        <!-- 화면 고정 UI: 버튼 등 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button Content="UserControl1" Click="ShowUC1_Click"/>
            <Button Content="UserControl2" Click="ShowUC2_Click"/>
            <Button Content="UserControl3" Click="ShowUC3_Click"/>
            <Button Content="UserControl4" Click="ShowUC4_Click"/>
            <Button Content="UserControl5" Click="ShowUC5_Click"/>
            <!--Button Content="UserControl6" Click="ShowUC6_Click"/-->
        </StackPanel>

        <!-- 유저컨트롤을 표시할 메인 영역 -->
        <Grid x:Name="MainGrid" Margin="0,50,0,0"/>
    </Grid>



    <!-- 테스트용 임시 주석 ContentControl Content="{Binding currentPage}"/-->
        <!--local:UserControl2/> 테스트 유저컨트롤 -->
</Window>
