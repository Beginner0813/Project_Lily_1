                    <TextBlock Text="(a/6)" Grid.Column="6" Grid.Row="8" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <Separator Grid.ColumnSpan="6" Grid.Row="9" Margin="10"/>

                    <TextBlock Text="생산 현황" Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="2" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Separator Grid.ColumnSpan="6" Grid.Row="10" Margin="10,20,10,0"/>


                    <Image Source="/Assets/Lily.png" Width="30" Height="30" Margin="0,0,0,0"  Grid.Row="11" Grid.Column="0" />
                    <TextBlock Text="재료3" Grid.Row="11" Grid.Column="1" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="초" Grid.Row="11" Grid.Column="6" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
