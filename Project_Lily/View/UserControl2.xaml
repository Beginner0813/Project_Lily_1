                    <Image Source="/Assets/Lily.png" Width="30" Height="30" Margin="0,0,0,0"  Grid.Row="12" Grid.Column="0" />
                    <TextBlock Text="재료3" Grid.Row="12" Grid.Column="1" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="초" Grid.Row="12" Grid.Column="6" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <ProgressBar Minimum="0" Maximum="100" Value="30" Margin="15" Grid.Row="12" Grid.Column="2" Grid.ColumnSpan="3"/>

                    <Image Source="/Assets/Lily.png" Width="30" Height="30" Margin="0,0,0,0"  Grid.Row="13" Grid.Column="0" />
                    <TextBlock Text="재료3" Grid.Row="13" Grid.Column="1" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="초" Grid.Row="13" Grid.Column="6" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <ProgressBar Minimum="0" Maximum="100" Value="30" Margin="15" Grid.Row="13" Grid.Column="2" Grid.ColumnSpan="3"/>

                    <Image Source="/Assets/Lily.png" Width="30" Height="30" Margin="0,0,0,0"  Grid.Row="14" Grid.Column="0" />
                    <TextBlock Text="재료3" Grid.Row="14" Grid.Column="1" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="초" Grid.Row="14" Grid.Column="6" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <ProgressBar Minimum="0" Maximum="100" Value="30" Margin="15" Grid.Row="14" Grid.Column="2" Grid.ColumnSpan="3"/>

                    <TextBlock Text="(2/4)" Grid.Column="6" Grid.Row="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <!-- 타이머
                    <TextBlock Text="x" Margin="0,0,0,0" Foreground="White" Grid.Row="8" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Text="y" Margin="0,0,0,0" Foreground="White" Grid.Row="8" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Text="z" Margin="0,0,0,0" Foreground="White" Grid.Row="8" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" /-->

                </Grid>
            </GroupBox>
        </Grid>


        <!-- 끝 -->

                
    </Grid>
</UserControl>
